# To see what this is about, have a look at
# https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 8
charset = utf-8

[*.{bat,ps1,vbs,cmd}]
end_of_line = crlf

[*.{md,rst}]
max_line_length = 80

[*.{cc,h,js,py,pl,pm,t}]
trim_trailing_whitespace = true
max_line_length = 120

[{Makefile,*.make,*.am}]
indent_style = tab
